<% if @task.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@task.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>

    <ul>
    <% @task.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<br>
<div class="container">

  <%= form_for(@task) do |f| %>

  <div class="form-group">
    <%= f.label :description, "Description" %>
    <%= f.text_field :description, class: "form-control" %>
  </div>


  <div class="form-group">
    <%= f.label :due_date, "Due date"%>
    <%= f.date_select :due_date, class: "form-control" %>
  </div>


  <div class="form-group">
    <%= f.label :assignment_id, "Select the Assignment for this task:" %><br>
    <%= f.collection_select :assignment_id, Assignment.all, :id, :name %>
  </div>



    <% if @user %>
       <%= f.hidden_field :user_id  %>
    <% else  %>
      <div class="form-group">
        <%= f.label :user_id, "Select the User for this task:" %><br>
        <%= f.collection_select :user_id, User.all, :id, :username %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
  <% end  %>
</div>